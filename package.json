    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.28.5",
    "concurrently": "^7.6.0",
    "daisyui": "^2.51.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.34.0",
    "happy-dom": "^8.6.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
