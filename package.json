{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npx prisma generate && npm run build:server && remix build",
    "build:server": "node --require dotenv/config ./scripts/build.mjs",
    "dev": "remix build && concurrently \"npm:build:server\" \"npm:dev:*\"",
    "dev:server": "cross-env NODE_ENV=development nodemon --require dotenv/config ./dist/server.js --watch ./dist/server.js",
    "dev:remix": "remix watch",
    "start": "node ./dist/index.js",
    "typecheck": "tsc",
    "test": "dotenv -e .env.test -- vitest -c vitest/base.vitest.config.ts",
    "test:ci": "vitest -c vitest/base.vitest.config.ts run",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@remix-run/express": "*",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "classnames": "^2.3.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "isbot": "^3.6.6",
    "luxon": "^3.2.1",
    "morgan": "^1.10.0",
    "prisma": "^4.10.1",
    "ramda": "^0.28.0",
    "ramda-adjunct": "^3.4.0",
    "rc-pagination": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-utils": "^6.0.0",
    "winston": "^3.8.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
